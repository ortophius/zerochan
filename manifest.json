{
    "name": "Zerochan image downloader",
    "version": "0.1",
    "description": "Extension for batch image downloading by tags",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "activeTab",
        "cookies",
        "https://*.zerochan.net/*",
        "downloads",
        "storage"
    ],
    "web_accessible_resources": [
      "*.js.map"
    ],
    "browser_action": {
        "default_title": "Zerochan Grabber",
        "default_popup": "index.html"
    },
    "background": {
      "scripts": ["downloader.js"],
      "persistent": true
    }
}